<% include ../partials/header.ejs %>


<div id = "container">
  <div id = "newTodo">
    <a href="lists/add">Add Todo</a>
  </div>

   <% for (let todo of data) { %>
     <div class = "box">
       <div class = "row">
         <div class="cell1">
            <p><%= todo.title %></p>
         </div>
         <div class="cell1">
            <p><%= todo.status %></p>
         </div>
       </div>
       <div class = "row">
         <div class ="cell2">
            <p><%= todo.category %></p>
         </div>
         <div class = "cell2">
            <p><a href='/lists/<%= todo.id%>'>Info</a></p>
         </div>
         <!-- with method delete, override the post method, which is the default method for a form -->
         <div class ="cell2">
            <form action="/lists/<%= todo.id %>?_method=Delete " method="Post">
               <input type="Submit" value="Delete"/>
            </form>
         </div>
         <div class = "cell2">
            <form action="/lists/<%= data.id %>?_method=PUT" method="Post">
               <input type="Submit" value="Edit" />
            </form>
         </div>
       </div>
    </div>
   <% } %>
</div>

<% include ../partials/footer.ejs %>
